{
  "name": "bit-backend",
  "version": "1.0.0",
  "description": "Backend project to power stundet management client application",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node ./build/index.js",
    "dev": "nodemon",
    "lint": "eslint ./src --ext .ts",
    "pretty": "prettier --write ./src",
    "build": "npm run clean && npm run build-ts",
    "clean": "rm --recursive --force ./build",
    "build-ts": "npx tsc",
    "upgrade": "npm update --save-dev && npm update --save",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "./src/**/*.{js,ts}": [
      "npm run pretty",
      "npm run lint"
    ]
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlueeBit/bit-backend.git"
  },
  "author": "ElyasSalar & HediMuhamad",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BlueeBit/bit-backend/issues"
  },
  "homepage": "https://github.com/BlueeBit/bit-backend#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.14",
    "@types/uuid": "^8.3.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-sonarjs": "^0.15.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "mongodb": "^4.9.1",
    "uuid": "^9.0.0",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1"
  }
}
